import random
import tkinter as tk

# first & last name content generated by chatGPT, ei only prefixes, middles, and suffixes list - (6) list total
first_name_prefixes = ["An", "Be", "Ca", "Da", "El", "Fa", "Ga", "Ha", "Ia", "Ja"]
first_name_middles = ["li", "na", "ri", "ta", "lo", "mi", "ra", "so", "vi", "we"]
first_name_suffixes = ["na", "ra", "la", "da", "sa", "ma", "ta", "ya", "za", "ka"]

last_name_prefixes = ["Mc", "O'", "Van ", "De", "Le", "St.", "Thorn", "Green", "White", "Black"]
last_name_middles = ["son", "ley", "ham", "ford", "berg", "man", "well", "wood", "brook", "field"]
last_name_suffixes = ["son", "ton", "ford", "er", "man", "hall", "wood", "field", "stone", "brook"]

def generateEmail():
    fname_prefix = random.choice(first_name_prefixes)
    fname_middles = random.choice(first_name_middles)
    fname_suffixes = random.choice(first_name_suffixes)

    lname_prefixes = random.choice(last_name_prefixes)
    lname_middles = random.choice(last_name_middles)
    lname_suffixes = random.choice(last_name_suffixes)

    emails = ["@gmail.com", "@outlook.com", "@yahoo.com"]

    full_name = fname_prefix + fname_middles + fname_middles + lname_prefixes + lname_middles + lname_suffixes
    full_name += random.choice(emails)

    return full_name


def generatePassword():
    alphabet_digits_symbols = ["a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l", "m", "n", "o", "p", "q", "r", "s", "t", "u", "v", "w", "x", "y", "z", "1", "2", "3", "4", "5", "6", "7", "8", "9", "!", '"', "#", "$", "%", "&", ";"]
    charachter = ""
    number_length = random.randrange(10, 16)
    for i in range(number_length):
        charachter += random.choice(alphabet_digits_symbols)

    return charachter


def updateEmailDisplay():
    email = generateEmail()
    email_display.delete(0, tk.END)
    email_display.insert(0, email)

def updatePasswordDisplay():
    password = generatePassword()
    password_display.delete(0, tk.END)
    password_display.insert(0, password)


w = tk.Tk()
w.title("Random Password Generator")

email_label = tk.Label(w, text="Email", width=20)
email_label.grid(row=0, column=0, padx=10, pady=10)

email_display = tk.Entry(w, width=30)
email_display.grid(row=0, column=1, padx=10, pady=10)

generate_email_button = tk.Button(w, text="Generate Email", width=20, command=updateEmailDisplay)
generate_email_button.grid(row=1, column=1, pady=10, padx=10)

password_label = tk.Label(w, text="Password", width=20)
password_label.grid(row=2, column=0, padx=10, pady=10)

password_display = tk.Entry(w, width=30)
password_display.grid(row=2, column=1, padx=10, pady=10)

generate_password_button = tk.Button(w, text="Generate Password", width=20, command=updatePasswordDisplay)
generate_password_button.grid(row=3, column=1, padx=10, pady=10)
w.mainloop()
